{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch-extension",
      "type": "shell",
      "command": "npm run watch",
      "options": {
        "cwd": "${workspaceFolder}/extensions/reqcraft-vscode"
      },
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "compile-extension",
      "type": "shell",
      "command": "npm run compile",
      "options": {
        "cwd": "${workspaceFolder}/extensions/reqcraft-vscode"
      },
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent"
      },
      "group": "build"
    },
    {
      "label": "install-extension-deps",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/extensions/reqcraft-vscode"
      },
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
