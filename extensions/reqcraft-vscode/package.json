{
  "name": "reqcraft",
  "displayName": "ReqCraft",
  "description": "Syntax highlighting and code completion for .rqc files",
  "version": "1.0.0",
  "publisher": "moonrailgun",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moonrailgun/reqcraft"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:rqc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rqc",
        "aliases": [
          "ReqCraft",
          "rqc"
        ],
        "extensions": [
          ".rqc"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/rqc.svg",
          "dark": "./icons/rqc.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "rqc",
        "scopeName": "source.rqc",
        "path": "./syntaxes/rqc.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "rqc",
        "path": "./snippets/rqc.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
